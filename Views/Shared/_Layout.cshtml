<!DOCTYPE html>
<html lang="tr">


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kriptografi Uygulaması</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="~/css/layout/base.css" asp-append-version="true" />

    <!-- Component styles -->
    <link rel="stylesheet" href="~/css/components/forms.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/cards.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/buttons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/tooltips.css" asp-append-version="true" />

    <!-- Page specific styles -->
    @if (Context.Request.Path.StartsWithSegments("/AES"))
    {
        <link rel="stylesheet" href="~/css/pages/aes.css" asp-append-version="true" />
    }
    else if (Context.Request.Path.StartsWithSegments("/RSA"))
    {
        <link rel="stylesheet" href="~/css/pages/rsa.css" asp-append-version="true" />
    }
    else if (Context.Request.Path.StartsWithSegments("/SHA"))
    {
        <link rel="stylesheet" href="~/css/pages/sha.css" asp-append-version="true" />
    }
    else if (Context.Request.Path.StartsWithSegments("/Home"))
    {
        <link rel="stylesheet" href="~/css/pages/home.css" asp-append-version="true" />
    }

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3">
            <div class="container px-4">
                <a class="navbar-brand d-flex align-items-center py-0" asp-area="" asp-controller="Home"
                    asp-action="Index">
                    <i class="bi bi-key-fill fs-4 me-2"></i>
                    <span>Kriptografi Uygulaması</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i>Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="AES" asp-action="Index">
                                <i class="bi bi-lock-fill me-1"></i>AES
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="RSA" asp-action="Index">
                                <i class="bi bi-key-fill me-1"></i>RSA
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SHA" asp-action="Index">
                                <i class="bi bi-hash me-1"></i>SHA-256

                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle-fill me-1"></i>Hakkında
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link ps-3 pe-2" href="https://github.com/halilbalik" target="_blank"
                                title="GitHub">
                                <i class="bi bi-github fs-5"></i>
                                <span class="d-lg-none ms-1">GitHub</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container px-4">
        <main role="main" class="py-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
